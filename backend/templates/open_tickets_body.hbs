<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Opened tickets</title>
  </head>
  <body>
    <h1>Currently opened tickets</h1>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Creator</th>
          <th>Title</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each this}}
          <tr>
            <td>{{formattime this}}</td>
            <td>{{this.creator}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>